@{
    Layout = "_Layout";
}

@model Factory.Models.Machine
@using Factory.Models

<h2>Machine Details</h2>
<p>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</p>
<br>
<p>@Html.ActionLink("Edit Machine", "Edit", "Machines", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("Delete Machine", "Delete", "Machines", new { id = Model.MachineId })</p>
<hr>
<h4>Engineers</h4>
@if (@Model.EngineerMachines.Count == 0)
{
    <p>Machine does not have any engineers.</p>
}
@foreach (EngineerMachine engineerMachine in Model.EngineerMachines)
{
    <p>@engineerMachine.Engineer.Name</p>
}
<p>@Html.ActionLink("Add Engineer", "AddEngineer", new { id = Model.MachineId })</p>