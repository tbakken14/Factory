@{
    Layout = "_Layout";
}

@model Factory.Models.Engineer
<h2>Edit Engineer Details</h2>

<h3>Update the information for: @Html.DisplayFor(model => model.Name)</h3>
@using (Html.BeginForm("Update", "Engineers"))
{
    @Html.HiddenFor(model => model.EngineerId)
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    <br>
    <input type="submit" value="Update Engineer">
}